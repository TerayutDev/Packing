                    <option value="SLOC">SLOC</option>
                    <option value="S">S-Shif</option>
                </select>
                <button class="btn btn-primary" style="margin-left:5px;padding-top:3px;padding-bottom:3px">@localizer["Apply"]</button>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label style="width:100%;padding:0px 0px 0px 15px;background-color:silver;border:silver thin solid">@localizer["StickerFormat"]</label>
            <div class="form-inline">
                <label style="font-weight:normal;width:120px">@localizer["StickerWH"]</label>
                <input type="text" id="txstickerwidth" class="form-control" style="margin-right:10px;width:50px;text-align:center" />
                <input type="text" id="txstickerwidth" class="form-control" style="width:50px;text-align:center;margin-right:5px" />
                <label style="font-weight:normal"> @localizer["Inchs"]</label>
                
                <label style="font-weight:normal;width:120px">@localizer["QRFormatWH"]</label>
                <input type="text" id="txqrwidth" class="form-control" style="margin-right:10px;width:50px;text-align:center" />
                <input type="text" id="txqrwidth" class="form-control" style="width:50px;text-align:center;margin-right:5px" />
                <label style="font-weight:normal"> @localizer["Inchs"]</label>

                <label style="font-weight:normal;width:80px">@localizer["FontSize"]</label>
                <input type="text" id="txfontsize" class="form-control" style="margin-right:10px;width:50px;text-align:center" />

                <label style="font-weight:normal;width:140px">@localizer["RunNoFontSize"]</label>
                <input type="text" id="txrunnofontsize" class="form-control" style="margin-right:10px;width:50px;text-align:center" />

                <label style="font-weight:normal;width:140px">@localizer["FormNoFontSize"]</label>
                <input type="text" id="txformno" class="form-control" style="margin-right:3px;width:50px;text-align:center" />

                <button class="btn btn-primary" style="margin-left:5px;padding-top:3px;padding-bottom:3px">@localizer["Apply"]</button>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label style="width:100%;padding:0px 0px 0px 15px;background-color:silver;border:silver thin solid">Packing line-Product configuration</label>
            <div class="form-inline">
                <table class="isr-table" id="tbl1">
                    <thead>
                        <tr>
                            <th style="width:80px">@localizer["Line"]</th>
                            <th>@localizer["MaterailCode"]</th>
                            <th>@localizer["MaterialName"]</th>
                            <th>@localizer["UOM"]</th>
                            <th>@localizer["Status"]</th>
                            <th>@localizer["Hold"]</th>
                            <th>@localizer["FormNo"]</th>
                            <th>@localizer["Rev"]</th>
                            <th style="width:45px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ondblclick="showmodal(1)">
