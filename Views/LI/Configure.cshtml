                        <th style="width:100px;min-width:100px;font-weight:normal">@localizer["From"]</th>
                        <th style="width:100px;min-width:100px;font-weight:normal">@localizer["To"]</th>
                        <th style="width:100px;min-width:80px;font-weight:normal"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="width:100px;min-width:100px"><input class="form-control text-center" value="เช้า" /></td>
                        <td style="width:100px;min-width:100px"><input class="form-control text-center" /></td>
