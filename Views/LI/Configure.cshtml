                </select>
                <select id="selfield2" style="width:120px;margin-right:3px">
                    <option></option>
                    <option value="DD">DD-Day</option>
                    <option value="MM" selected>MM-Month</option>
                    <option value="YY">YY-Year</option>
                    <option value="SLOC">SLOC</option>
                    <option value="S">S-Shif</option>
                </select>
                <select id="selfield3" style="width:120px;margin-right:3px">
                    <option></option>
                    <option value="DD">DD-Day</option>
                    <option value="MM">MM-Month</option>
                    <option value="YY" selected>YY-Year</option>
                    <option value="SLOC">SLOC</option>
                    <option value="S">S-Shif</option>
                </select>
                <select id="selfield4" style="width:120px;margin-right:3px">
                    <option></option>
                    <option value="DD">DD-Day</option>
                    <option value="MM">MM-Month</option>
                    <option value="YY">YY-Year</option>
                    <option value="SLOC" selected>SLOC</option>
                    <option value="S">S-Shif</option>
                </select>
                <select id="selfield5" style="width:120px">
                    <option selected></option>
                    <option value="DD">DD-Day</option>
                    <option value="MM">MM-Month</option>
